[ -d ../fossils ] || mkdir ../fossils
fossil init --project-name "$project" ../fossils/$project.fossil
fossil open -k ../fossils/$project.fossil
fossil add .
fossil ci -m "$project"
fossil set ignore-glob "target/"
clojure -M:prod

