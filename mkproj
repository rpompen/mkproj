(ns $project.core
  (:require [hoplon.core :refer [defelem div h1 p text input with-init! br if-tpl
                                 button form for-tpl fieldset legend case-tpl]]
            [hoplon.jquery]
            [javelin.core :refer [cell cell= dosync]]
            [$project.rpc :as rpc]
            [$project.widgets :as w]))

(with-init! (rpc/get-people))

(defelem demo [_ _]
  (div
   (h1 "Voorbeeld")
   (p "Gets data from file via JVM backend. ")
   (button :type "button" :click #(rpc/get-file "Joe") "Get file")
   (p (text "~{rpc/file-data}"))
   (text "Gets items from database AND ~{rpc/db-refresh}")
   (form
    (fieldset
     (legend "People")
     (for-tpl [{:keys [id name age]} rpc/people]
       (div
        (input :type "text" :value name :disabled true)
        (input :type "text" :value age :disabled true)
        (button :type "button" :click (fn [] (rpc/del-person @id)) "Erase"))))
    (let [name (cell nil)
          age (cell nil)]
      (fieldset
       (legend "New person")
       (input :type "text" :placeholder "name"
              :value name
              :change #(reset! name @%))
       (input :type "number" :placeholder "age"
              :value age
              :change #(reset! age (int @%)))
       (button :type "button"
               :click (fn []
                        (rpc/add-person @name @age)
                        (reset! name nil)
                        (reset! age nil))
               "Add"))))))

(defelem application [_ _]
  (div (case-tpl rpc/view-mode
         :application (demo))))

(defelem login [_ _]
  (let [user (cell nil)
        pwd  (cell nil)]
    (fieldset
     (legend "Login")
     (input :type "text" :placeholder "User" :value user :change #(reset! user @%))(br)
     (input :type "text" :placeholder "Password" :value pwd :change #(reset! pwd @%))(br)
     (button :type "button" :click (fn [] (rpc/authorize @user @pwd)
                                     (reset! user nil)
                                     (reset! pwd nil)) "Login"))))

(defelem main [_ _]
  (div :id "app"
       (if-tpl (cell= (nil? rpc/auth))
         (login)
         (application))))

(.replaceChild (.-body js/document)
               (main) (.getElementById js/document "app"))
EOF
) > src/cljs/$projectdir/core.cljs

(
cat <<EOF
(ns $project.rpc
  (:require-macros
   [javelin.core :refer [defc defc=]]
   [cljs.core.async.macros :refer [go]])
  (:require
   [$project.shared :refer [port server secure?]]
   [javelin.core :refer [cell]]
   [chord.client :refer [ws-ch]]
   [clojure.string :as s]
   [cljs.core.async :refer [<! >! close!] :as async]))

;; RPC launcher
(defc error nil)
(defc loading #{})

(defn launch-fn
  "Launches RPC call for \`f\` in backend. Return value goes into cell."
  [f cl args]
  (go
    (let [{:keys [ws-channel error] :as call} (<! (ws-ch (str "ws" (when secure? \s) "://" server (when-not secure? (str ":" port)) "/ws")
                                                {:format :transit-json}))]
      (swap! loading conj call)
      (if error
        (js/console.log "Error:" (pr-str error))
        (do
          (>! ws-channel {:type :rpc :f f :args args})
          (let [msg (:message (<! ws-channel))]
            (cond (= msg :castranil) (reset! cl nil)
                  (some? (:castraexpt msg)) (reset! error (:castraexpt msg))
                  :else (reset! cl msg)))))
      (close! ws-channel)
      (swap! loading disj call))))

;; segmented state + lenses
;; reduces load due to state modifications and allows easier refactoring
(def state (cell {}))
(defc db-refresh nil)
(defc auth nil)

(defc= view-mode    (get-in state [:ui :view-mode]) #(swap! state assoc-in [:ui :view-mode] %))
(defc= file-data    (get-in state [:io :file-data]) #(swap! state assoc-in [:io :file-data] %))
(defc= people       (get-in state [:io :people])    #(swap! state assoc-in [:io :people] %))

;; RPC to backend
;; Cell data is overwritten, not merged
(defn get-file    [& params] (launch-fn 'get-file    file-data  params))
(defn get-people  [& params] (launch-fn 'get-people  people     params))

;; Database mutation calls: #'refresh should narrow the xact scope
(defn add-person  [& params] (launch-fn 'add-person  db-refresh params))
(defn del-person  [& params] (launch-fn 'del-person  db-refresh params))
(defn authorize   [& params] (launch-fn 'authorize   auth       params))

(defn refresh [] (get-people))

(defn logout [] (reset! auth nil))

(add-watch db-refresh :refresh
           (fn [k r o n] (when (and (nil? o)
                                   (= n :refresh))
                          (reset! db-refresh nil)
                          (refresh))))

(reset! view-mode :application)
EOF
) > src/cljs/$projectdir/rpc.cljs

